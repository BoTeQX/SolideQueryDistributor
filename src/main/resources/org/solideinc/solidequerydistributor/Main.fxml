                </Button>

            </children>
        </Pane>
        <Pane fx:id="mainContent" layoutX="260.0" prefHeight="600.0" prefWidth="640.0" style="-fx-background-color: black;">
            <children>
                <Circle fx:id="sendCircle" fill="WHITE" layoutX="591.0" layoutY="556.0" radius="26.0" stroke="BLACK" strokeType="INSIDE" styleClass="sendPromptButton" />
